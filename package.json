{
	"name": "tantalum-config",
	"version": "0.0.0",
	"private": true,
	"packageManager": "yarn@1.22.17",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint && prettier --write '**/*.{js,ts,json,md}'"
	},
	"devDependencies": {
		"eslint": "^8.8.0",
		"lerna": "^4.0.0",
		"prettier": "^2.5.1",
		"turbo": "1.1.2",
		"typescript": "^4.5.5"
	},
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=14.0.0"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": true
	}
}
